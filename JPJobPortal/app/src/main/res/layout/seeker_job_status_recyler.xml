<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="343dp"
    android:layout_height="130dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_bg">

        <TextView
            android:id="@+id/idinjobstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_slab"
            android:text="ID"
            android:textColor="#323232"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/jobDesiginjobstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Job Designation"
            android:textColor="#323232"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cninjobstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Company Name"
            android:textColor="#B0B0B0"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/expinjobstatus"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/txtview_round"
            android:fontFamily="@font/roboto_slab"
            android:text="Experience"
            android:textAlignment="center"
            android:textColor="@color/intro_bg" />

        <TextView
            android:id="@+id/joblocinjobstatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/txtview_round"
            android:fontFamily="@font/roboto_slab"
            android:text="Job Location"
            android:textAlignment="center"
            android:textColor="@color/intro_bg" />

        <TextView
            android:id="@+id/jobstatusinjobstatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="30dp"
            android:background="@color/design_default_color_primary"
            android:fontFamily="@font/roboto_slab"
            android:text="Applied"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundWhite" />

        <TextView
            android:id="@+id/jobresultinjobstatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/holo_orange_dark"
            android:fontFamily="@font/roboto_slab"
            android:text="Waiting List"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundWhite" />

    </RelativeLayout>

</FrameLayout>