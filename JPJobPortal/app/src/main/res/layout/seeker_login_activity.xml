<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seeker_Login_Activity">

    <ImageView
        android:id="@+id/slogin_half_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/slogin_half_bg"
        app:srcCompat="@drawable/slogin_half_bg" />

    <ImageView
        android:id="@+id/slogin_job_seeker_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/slogin_job_seeker_txt" />

    <ImageView
        android:id="@+id/slogin_job_seeker_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/slogin_job_seeker_img" />


    <ImageView
        android:id="@+id/slogin_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/slogin_email_id" />

    <EditText
        android:id="@+id/slogin_email_id_txtbox"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line_txt" />

    <ImageView
        android:id="@+id/email_line"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line_txt" />

    <ImageView
        android:id="@+id/slogin_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/slogin_pswd" />

    <EditText
        android:id="@+id/slogin_pswd_txtbox"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="480dp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line_txt" />


    <ImageView
        android:id="@+id/pswd_line"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line_txt" />


    <ImageButton
        android:id="@+id/slogin_signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/slogin_btn" />


    <ImageView
        android:id="@+id/slogin_dhaa"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="630dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/slogin_dhaa" />

    <ImageButton
        android:id="@+id/slogin_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="630dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/slogin_sign_up" />

    <ImageView
        android:id="@+id/signupbtn_line"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="645dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/line_txt" />



</RelativeLayout>
</ScrollView>